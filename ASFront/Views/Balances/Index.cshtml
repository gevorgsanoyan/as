@model ASFront.Models.Balance
@{
    ViewBag.Title = "Հաշվեկշռի Տվյալ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="@Url.Content("~/Content/TabsPanels.css")" rel="stylesheet" type="text/css" />
<h2>@Resources.Page.Edit</h2>


@using (Html.BeginForm())
{   @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Հաշվեկշռի Տվյալ</h4>
        <hr />

        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.clientId)


        @Html.Hidden("ApplicationID", (long)(@ViewBag.ApplicationID?? 0))

        @Html.Hidden("Edit", (bool)(@ViewBag.Edit ?? false))




        <p style="color:limegreen;">
            @ViewBag.cSaved
        </p>
        <p style="color:red;">
            @ViewBag.ErrorText
            
        </p>

      










        <div class="container">
            <div class="row">
                <div >
                    <div class="panel with-nav-tabs panel-success">
                        <div class="panel-heading panel-headingGreen">
                            <ul class="nav nav-tabs">
                                <li class="active"><a href="#tab1Balance" data-toggle="tab">1.Ընդհանուր Տվյալներ</a></li>
                                <li><a href="#tab2Balance" data-toggle="tab">2.Ընթացիկ Ակտիվներ</a></li>
                                <li><a href="#tab3Balance" data-toggle="tab">3.Ոչ Ընթացիկ Ակտիվներ</a></li>
                                <li><a href="#tab4Balance" data-toggle="tab">4.Ընթացիկ Պարտավորություններ</a></li>
                                <li><a href="#tab5Balance" data-toggle="tab">5.Ոչ ընթացիկ Պարտավորություններ</a></li>
                            </ul>
                        </div>
                        <div class="panel-body">
                            <div class="tab-content">
                                <div class="tab-pane fade in active" id="tab1Balance">
                                    @Html.Partial("Balance/_one", Model)
                                </div>
                                <div class="tab-pane fade" id="tab2Balance">
                                    @Html.Partial("Balance/_two", Model)
                                </div>
                                <div class="tab-pane fade" id="tab3Balance">
                                    @Html.Partial("Balance/_three", Model)
                                </div>
                                <div class="tab-pane fade" id="tab4Balance">
                                    <div id="tab4BalancePanel">
                                        @Html.Partial("Balance/_four", Model)
                                    </div>
                                       
                                    </div>
                                <div class="tab-pane fade" id="tab5Balance">
                                    <div id="tab5BalancePanel">
                                        @Html.Partial("Balance/_five", Model)
                                    </div>
                                   
                                </div>


                                <div class="form-group" style="padding-top:30px;">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value=@Resources.Page.Save name="Save" class="btn btn-default" />
                                        <input type="submit" value=@Resources.Page.Cancel name="Cancel"  formnovalidate="formnovalidate" class="btn btn-default" />
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>






    </div>




}




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

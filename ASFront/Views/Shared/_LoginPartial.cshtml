}


<script type="text/javascript">
        $(document).ready(function () {

            function getAppNotifications()
            {
                var r = '';
                r =
                $.ajax({
                    url: '@Url.Action("GetAppNotifications", "Lists")',
                    method: 'GET',
                    dataType: "json",
                    success: function (data) {
                        if (data > 0) {
                            //alert('Դուք ունեք հաստատման ենթակա վարկեր:');
                            $("#main_notif").show();
                            $("#rCount").text(data);
                            //$("#sec_notif").show();
                        }
                        else {
                            $("#main_notif").hide();
                            //$("#sec_notif").hide();
                        }
                        return data;
                    }
                });
                return r;
            }

            getAppNotifications();
        })



   

</script>
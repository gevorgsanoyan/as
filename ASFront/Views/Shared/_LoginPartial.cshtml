                <span id="rCount" class="badge bg-theme"></span>
                Ողջույն  @User.FullName() !                
            </a> 
            
            @*@Html.ActionLink("Ողջույն " + User.FullName() + " !", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })*@            

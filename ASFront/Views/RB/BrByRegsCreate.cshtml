@model ASFront.Models.BrbyRegs

@{
    ViewBag.Title = "Branches By Regions Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ընտրել տարածաշրջան մասնաճյուղի համար</h2>

@using (Html.BeginForm("BrByRegsCreate", "RB", FormMethod.Post, new { @class = "from-horizontal", role = "from" }))
{
    <div class="form-horizontal">
        @Html.AntiForgeryToken()
        <h4>Ընտրել մասնաճյուսն ու համապատասխան տարածաշրջանը</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Ընտրել մասնաճյուղը", new { @class = "col-md-2 control-lable" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.BranchesId, (SelectList)ViewBag.Br, "---Ընտրել---", new { onchange = "this.form.submit();", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.BranchesId, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Ընտրել տարածաշրջանը", new { @class = "col-md-2 control-lable" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.RegionsId, (SelectList)ViewBag.Rg, "---Ընտրել---", new { onchange = "this.form.submit();", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RegionsId, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
               <input type="submit" value=@Resources.Page.Save   name="Save"  class="btn btn-default" />
            </div>
        </div>
    </div>
}

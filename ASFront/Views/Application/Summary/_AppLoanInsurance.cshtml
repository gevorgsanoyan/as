
@model ASFront.ModelsView.LoanInsuranceViewModel





<div class="row mt">
    <div class="col-md-12">
        <div class="content-panel">
           
            @if (Model.GoldCollateralSum > 0 || Model.RealtyEstateSum > 0 || Model.MovableEstateSum > 0 || Model.GuarantorsList.Count > 0)
            {
                <h4>Վարկի Ապահովվածություն</h4>
                <hr>
                <div class="col-md-6">                       



                            @if (@Model.GoldCollateralSum > 0)
                    {

                                @Html.Partial("Summary/_AppLoanInsuranceGold", @Model)


                                <br />

                            }
                            @if (@Model.RealtyEstateSum > 0)
                    {
                                @Html.Partial("Summary/_AppLoanInsuranceRealty", @Model)


                                <br />

                            }
                            @if (@Model.MovableEstateSum > 0)
                    {

                                @Html.Partial("Summary/_AppLoanInsuranceMovable", @Model)


                                <br />
                            }

                    <table class="table table-striped table-advance table-hover">
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.loanCollateral)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.loanCollateral)%
                            </td>
                        </tr>
                    </table>  
</div>


                <div class="col-md-6">




                    @if (@Model.GuarantorsList.Count > 0)
                    {

                        @Html.Partial("Summary/_AppLoanInsuranceGuarantor", @Model.GuarantorsList)
                        <br />
                    }

                </div>

            }


            @*else
            {
                <h3> <span class="btn btn-block btn-warning no-btn"> Դեռևս Հաշվեկշռի տվյալ մուտքագրված չէ: </span></h3>
            }*@


        </div><!-- /content-panel -->
    </div><!-- /col-md-12 -->
</div><!-- /row -->

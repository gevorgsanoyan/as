@using PagedList.Mvc;
@model PagedList.IPagedList<ASFront.Models.DocType>

@{
    ViewBag.Title = "Փաստաթղթի տեսակը";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Փաստաթղթի տեսակը</h2>

<p>
    @Html.ActionLink(Resources.Page.CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink(Resources.Page.Edit, "Edit", new { id = item.Id })
        </td>
    </tr>
}

</table>
<br />


@Html.Partial("_Paging", Model)

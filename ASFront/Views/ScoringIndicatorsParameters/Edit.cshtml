@model ASFront.Models.ScoringIndicatorsParameters

@{
    ViewBag.Title = "Ցուցիչներ-Պարամետրեր";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Resources.Page.Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Ցուցիչներ-Պարամետրեր</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.IndicatorID)

        @Html.HiddenFor(model => model.ParameterID)

        <div class="form-group">
            @Html.LabelFor(model => model.IndicatorID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.IndicatorID, (SelectList)ViewBag.Ind, "---Ընտրել Indicator---", new {  @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IndicatorID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ParameterID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ParameterID, (SelectList)ViewBag.Param, "---Ընտրել Parameter---", new {  @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ParameterID, "", new { @class = "text-danger" })
            </div>
        </div>

     

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value=@Resources.Page.Save   name="Save"  class="btn btn-default" />
            </div>
        </div>
    </div>
}
@Html.Partial("_IndicatorMenu")
<div>
    @Html.ActionLink(Resources.Page.BackToList, "Index")
</div>

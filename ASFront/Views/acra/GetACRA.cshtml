                                                    {
                                                        <label>ՀՀ Դրամ</label>
                                                    }
                                                    else if (l.currencyId == 2)
                                                    {
                                                        <label>ԱՄՆ Դոլար</label>
                                                    }
                                                    else if (l.currencyId == 3)

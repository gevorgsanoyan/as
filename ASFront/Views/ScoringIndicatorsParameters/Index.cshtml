@using PagedList.Mvc;
@model PagedList.IPagedList<ASFront.ModelsView.ScoringIndicatorsParametersViewModel>

@{
    ViewBag.Title = "Ցուցիչներ-Պարամետրեր";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ցուցիչներ-Պարամետրեր</h2>

<p>
    @Html.ActionLink(Resources.Page.CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().IndicatorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().ParameterName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IndicatorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParameterName)
            </td>
            <td>
                @Html.ActionLink(Resources.Page.Edit, "Edit", new { id = item.ID })
            </td>
        </tr>
    }

</table>
@Html.Partial("_Paging", Model)
@Html.Partial("_IndicatorMenu")
@using PagedList.Mvc;
@model PagedList.IPagedList<ASFront.Models.ScoringParameters>

@{
    ViewBag.Title = "Պարամետրեր";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Պարամետրեր</h2>

<p>
    @Html.ActionLink(Resources.Page.CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().InputParameterName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().InputParameterValue)
        </th>
        @*<th>
        @Html.DisplayNameFor(model => model.First().ParameterDataType)
    </th>*@
        <th>
            @Html.DisplayNameFor(model => model.First().SourceTable)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().SourceField)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.InputParameterName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InputParameterValue)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.ParameterDataType)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.SourceTable)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SourceField)
        </td>
       
        <td>
            @Html.ActionLink(Resources.Page.Edit, "Edit", new { id=item.ID }) 
        </td>
    </tr>
}

</table>
@Html.Partial("_Paging", Model)
@Html.Partial("_IndicatorMenu")
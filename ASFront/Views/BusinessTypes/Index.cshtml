@model IEnumerable<ASFront.Models.BusinessType>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Բիզնեսի տեսակներ</h2>

<p>
    @Html.ActionLink("Ստեղծել նորը", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BusinessSector.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.note)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BusinessSector.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.note)
        </td>
        <td>
            @Html.ActionLink("Խմբագրել", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Դիտել", "Details", new { id=item.Id }) 
        </td>
    </tr>
}

</table>

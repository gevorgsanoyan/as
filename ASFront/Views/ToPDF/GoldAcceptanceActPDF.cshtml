                Հարգադրոշմված է արդյոք
            </div>

        </th>
        <th style="width:5%;">
            @Html.DisplayNameFor(model => model.GoldCollaterals.First().GoldAssayes.Assay)
        </th>
        <th style="width:15%;">
            @Html.DisplayNameFor(model => model.GoldCollaterals.First().EstimatedUnitCostAMD)
        </th>
        <th style="width:15%;">
            @Html.DisplayNameFor(model => model.GoldCollaterals.First().EstimatedTotalCostAMD)
        </th>
    </tr>

    @foreach (var item in TableList)
    {
        <tr class=@row>
            <td>
                @{

                    i++;
                    if (i % 2 != 0)
                    {
                        row = "tabloddrow";
                    }
                    else
                    {
                        row = "";

                    }

                }
                @i
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.GoldTypes.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.TotalWeightWithJewels)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NetWeight)
            </td>
            <td>


                @if (item.PresenceOfAssayStamp)
                {
                    @Html.DisplayName("Այո")
                }
                else
                {
                    @Html.DisplayName("Ոչ")
                }
                @*@Html.DisplayFor(modelItem => item.PresenceOfAssayStamp)*@
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.GoldAssayes.Assay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstimatedUnitCostAMD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstimatedTotalCostAMD)
            </td>


        </tr>
    }

    <tr>
        <th colspan="3">Ընդամենը</th>
        <th>@Model.QuantitySum</th>
        <th>@Model.TotalWeightWithJewelsSum</th>
        <th>@Model.NetWeightSum</th>
        <th colspan="3"></th>
        <th>@Model.EstimatedTotalCostAMDSum</th>
    </tr>

</table>

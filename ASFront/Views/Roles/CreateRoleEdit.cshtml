@model ASFront.Models.applicationEditRoles

@{
    ViewBag.Title = "CreateRoleEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ստեղծել խմբագրման դեր</h2>

<p style="color:limegreen;">
    @ViewBag.errMsg
</p>
<br />
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Դեր</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.RoleName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.RoleName,(SelectList)ViewBag.lRoles, "---Ընտրել---",new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RoleName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.canEdit, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.canEdit)
                    @Html.ValidationMessageFor(model => model.canEdit, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ստեղծել" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Վերադառնալ", "ApplicationEditRoles")
</div>

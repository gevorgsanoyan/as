@using PagedList.Mvc;
@model PagedList.IPagedList<ASFront.Models.productGroups>

@{
    ViewBag.Title = "Պրոդուկտների խումբեր";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Պրոդուկտների խմբեր</h2>

<p>
    @Html.ActionLink(Resources.Page.CreateNew, "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().prodGroupName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().note1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().note2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().note3)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.prodGroupName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.note1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.note2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.note3)
        </td>
        <td>
            @Html.ActionLink(Resources.Page.Edit, "Edit", new { id=item.productGroupId }) 
  
        </td>
    </tr>
}

</table>
<br />


@Html.Partial("_Paging", Model)
